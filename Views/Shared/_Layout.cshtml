                            </span>
                        </button>
                    </div>
                </div>
            </div>
            <nav class="navbar-mobile">
                <div class="container-fluid">
                    <ul class="navbar-mobile__list list-unstyled">
                        <li class="has-sub">
                            <a class="js-arrow" href="#">
                                <i class="fas fa-tachometer-alt"></i>Dashboard
                            </a>
                            <ul class="navbar-mobile-sub__list list-unstyled js-sub-list">
                                <li>
                                    <a href="@Url.Action("Dashboard","Home")">Dashboard 1</a>
                                </li>
                                @{
                                    if (Session["funcaoFuncionario"].ToString().ToUpper() != "RECEPCIONISTA")
                                    {
                                        <li>
                                            <a href="@Url.Action("Dashboard2","Home")">Dashboard 2</a>
                                        </li>
                                    }
                                }

                            </ul>
                        </li>

                        @if (User.IsInRole("CONSULTAR_VIATURAS") || User.IsInRole("CONSULTAR_MOTORISTAS"))
