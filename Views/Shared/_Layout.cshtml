                                <a class="js-arrow" href="#">
                                    <i class="fas fa-copy"></i>Parametriza&ccedil;&atilde;o
                                </a>
                                <ul class="navbar-mobile-sub__list list-unstyled js-sub-list">
                                    @{
                                        if (User.IsInRole("CONSULTAR_VIATURAS"))
                                        {
                                            <li>
                                                <a href="@Url.Action("Index","Viaturas")">
                                                    <i class="fas fa-car"></i> Viaturas
                                                </a>
                                            </li>
                                        }

                                        if (User.IsInRole("CONSULTAR_MOTORISTAS"))
                                        {
                                            <li>
                                                <a href="@Url.Action("Index","Motoristas")">
                                                    Motoristas
                                                </a>
                                            </li>
                                        }
                                    }
                                </ul>
                            </li>
                        }

                        <li class="has-sub">
                            <a class="js-arrow" href="#">
                                <i class="fas fa-dollar-sign"></i> Vendas
                            </a>
                            <ul class="navbar-mobile-sub__list list-unstyled js-sub-list">
                                <li>
                                    <a href="@Url.Action("Index","Aluguer")">
                                        <i class="fas fa-map-marker-alt"></i>Aluguer
                                    </a>
                                </li>

                                <li>
                                    <a href="@Url.Action("Reserva","Aluguer")">
                                        <i class="fas fa-map-marker-alt"></i>Reservas
                                    </a>
                                </li>

                                @if (User.IsInRole("CONSULTAR_CLIENTES"))
                                {
                                    <li>
                                        <a href="@Url.Action("Index","Clientes")">
                                            <i class="fas fa-group"></i>Clientes
                                        </a>
                                    </li>
                                }


                            </ul>
                        </li>

                        @if (User.IsInRole("CONSULTAR_FUNCIONARIOS") || User.IsInRole("CONSULTAR_USUARIOS"))
                        {
                            <li class="has-sub">
                                <a class="js-arrow" href="#">
                                    <i class="fas fa-dollar-sign"></i> Utilizadores e Funcion&aacute;rios
