                                            </a>
                                        </li>
                                    }
                                    @if (User.IsInRole("CONSULTAR_USUARIOS"))
                                    {
                                        <li>
                                            <a href="@Url.Action("Index","Users")">

                                                <i class="fas fa-user"></i>Usu&aacute;rios
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </nav>
