@model RentAndDrive.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Viaturas")">Utilizadores e Funcion&aacute;rios</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Users")">Usu&aacute;rios</a></li>
        <li class="breadcrumb-item active" aria-current="page">Resetar Senha</li>
    </ol>
</nav>


@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Email)
    @*<div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>*@

    <div class="card card-nav-tabs card-plain">
        <div class="card-header card-header-danger">
            <h3 class="modal-title">Resetar a Senha</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="form-group col-xs-6 col-md-6 col-lg-6">
                    @Html.Label("Nova Senha", new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group col-xs-6 col-md-6 col-lg-6">
                    @Html.Label("Confirme a Senha", new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer bg-light">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-sm btn-outline-success" value="Salvar" />
                    <input type="button" class="btn btn-sm btn-outline-danger" value="Cancelar" onclick="@Url.Action("Dashboard","Home")" />
                </div>
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
